<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Dokany" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- System bar attributes -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>

        <!-- App bar attributes -->
        <item name="homeAsUpIndicator">@drawable/ic_line_angle_left_b</item>

        <!-- Type attributes -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Dokany.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Dokany.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Dokany.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Dokany.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Dokany.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Dokany.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Dokany.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Dokany.Subtitle2</item>
        <item name="textAppearanceSubtitle3">@style/TextAppearance.Dokany.Subtitle3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Dokany.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Dokany.Body2</item>
        <item name="textAppearanceBody3">@style/TextAppearance.Dokany.Body3</item>
        <item name="textAppearanceButton">@style/TextAppearance.Dokany.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Dokany.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Dokany.Overline</item>

        <!-- Shape attributes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Dokany.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Dokany.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Dokany.LargeComponent
        </item>

        <!-- Widget style attributes -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Dokany.BottomSheetDialog</item>

        <item name="listPopupWindowStyle">@style/Widget.Dokany.PopupMenu.ContextMenu</item>

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="ShapeAppearance.Dokany.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Dokany.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.Dokany.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearance.Dokany.CartCheckout" parent="ShapeAppearance.Dokany.LargeComponent">
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearance.Dokany.QuickAddToCart" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>

    <style name="ShapeAppearance.Dokany.AppBarAction" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Widget.Dokany.PopupMenu.ContextMenu" parent="Widget.MaterialComponents.PopupMenu.ContextMenu">
        <item name="android:popupBackground">@drawable/bg_surface_corners_16dp</item>
    </style>

    <style name="ShapeAppearance.Dokany.Circle" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Dokany.CheckMark" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.Dokany.Product.Cut" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSize">0dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ThemeOverlay.Dokany.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
    </style>

    <style name="Widget.Dokany.TopAppBar.NavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="Widget.Dokany.TopAppBar.ActionButton" parent="Widget.AppCompat.ActionButton" />

    <style name="Widget.Dokany.List.ListItem" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorPrimary">#3C4043</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconPadding">24dp</item>
    </style>

    <style name="Widget.Dokany.AddressChooser.Address" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/white</item>
        <item name="colorPrimary">#7b49ee</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">#1b1919</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconTint">#7b49ee</item>
        <item name="iconPadding">16dp</item>
    </style>

    <style name="Widget.Dokany.Button.PlaceOrder" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="colorPrimary">#FBD96B</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Dokany.Button.HighEmphasis</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Widget.Dokany.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="Widget.Dokany.RatingBar" parent="Widget.MaterialRatingBar.RatingBar.Small">
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="mrb_fillBackgroundStars">false</item>
        <item name="mrb_progressTint">#f7bb44</item>
        <item name="mrb_secondaryProgressTint">#dadce0</item>
        <item name="mrb_progressBackgroundTint">#dadce0</item>
    </style>

    <style name="Shape.Dokany.Store.Action.Icon" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">2dp</item>
        <item name="contentPadding">8dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Dokany.Circle</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="tint">?attr/colorSecondary</item>
    </style>

    <style name="Shape.Dokany.Shop.QuickAddToCart.Button" parent="">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:padding">16dp</item>
        <item name="contentPadding">4dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Dokany.Circle</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Theme.Dokany.OnPrimary" parent="">
        <item name="colorPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Dokany.Secondary.Surface.OnSecondary.Secondary" parent="">
        <item name="colorSecondary">?attr/colorSurface</item>
        <item name="colorOnSecondary">@color/colorSecondary</item>
    </style>

    <style name="Theme.Dokany.OnBeige" parent="">
        <item name="colorPrimary">#111111</item>
    </style>

</resources>